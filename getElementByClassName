    <button onclick="myFunction()">Try it</button>

    <script>
      function myFunction() {
        var x = document.getElementsByClassName("color");
        var i;
        for (i = 0; i < x.length; i++) {
          x[i].style.backgroundColor = "red";
        }
      }
    </script>
